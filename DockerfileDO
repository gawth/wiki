FROM golang

ADD . /wiki

WORKDIR /wiki

ENV WIKIDIR /usr/share/wiki

RUN groupadd -r wiki -g 1024 && useradd -r -u 1024 -g wiki wiki
USER wiki

RUN mkdir secret
ENV KEYLOCATION secret

ENV LOGFILE ""
ENV PORT 8990
ENV VIRTUAL_HOST=wiki.gawthorpe.co.uk
ENV LETSENCRYPT_HOST=wiki.gawthorpe.co.uk

ENV CGO_ENABLED 1

RUN go get ./...
RUN go build ./... 

EXPOSE 8990
ENTRYPOINT /wiki/wiki
